{
  "env": {
    "es2020": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-import-helpers",
    "unused-imports"
  ],
  "rules": {
    "camelcase": "off",
    "semi": ["error", "never"],
    "no-shadow": "off",
    "no-console": "off",
    "no-useless-constructor": "off",
    "no-empty-function": "off",
    "class-methods-use-this": "off",
    "no-multiple-empty-lines": ["error", { "max": 3, "maxEOF": 1, "maxBOF": 0 }],
    "space-before-function-paren": ["error", "always"],
    "no-unused-vars": "warn",
    "padded-blocks": ["error", "always"],
    "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": false }],
    "max-len": ["error", { "code": 80, "tabWidth": 2 }],
    "one-var-declaration-per-line": ["error", "always"],
    "object-curly-newline": [
      "error", {
        "ObjectExpression": { "minProperties": 1, "consistent": false, "multiline": true },
        "ObjectPattern": { "minProperties": 1, "consistent": false, "multiline": true },
        "ImportDeclaration": { "minProperties": 1, "consistent": false, "multiline": true },
        "ExportDeclaration": "always"
      }
    ],
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "interface",
        "format": ["PascalCase"],
        "custom": {
          "regex": "^I[A-Z]",
          "match": true
        }
      },
      {
        "selector": "class",
        "modifiers": ["abstract"],
        "format": ["PascalCase"],
        "custom": {
          "regex": "^A[A-Z]",
          "match": true
        }
      }
    ],
    "@typescript-eslint/member-delimiter-style": ["error",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "comma",
          "requireLast": true
        }
      }
    ],
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": "off",
    "import/no-unresolved": "error",
    "import/prefer-default-export": "off",
    "import/newline-after-import": ["error", { "count": 3 }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ],
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": ["module", "/^@/", ["parent", "sibling", "index"]],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/*.spec.js"] }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
